<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="2*"/>
            <!-- Поле ввода исходного текста -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопка "Разобрать" -->
            <RowDefinition Height="Auto"/>
            <!-- Результат анализа -->
            <RowDefinition Height="2*"/>
            <!-- Лог этапов разбора -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Введите исходный текст:" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,5"/>

        <!-- Многострочный TextBox для ввода исходного текста -->
        <TextBox Name="InputTextBox" Grid.Row="1" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                 Text="" />

        <!-- Кнопка запуска синтаксического анализа -->
        <Button Content="Разобрать" Grid.Row="2" Margin="0,10,0,10" 
                Width="100" HorizontalAlignment="Left" Click="ParseButton_Click"/>

        <!-- Вывод результата анализа -->
        <TextBlock Name="ResultTextBlock" Grid.Row="3" TextWrapping="Wrap" 
                   FontWeight="Bold" Foreground="DarkGreen" Margin="0,0,0,10"/>

        <!-- Лог этапов разбора -->
        <TextBox Name="ParseLogTextBox" Grid.Row="4" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" 
                 IsReadOnly="True" Background="LightGray"/>
    </Grid>
</Window>
