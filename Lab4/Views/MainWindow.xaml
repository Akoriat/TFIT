<Window x:Class="Lab4.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab4 - Interpreter Demo" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="AnalyzeButton"
                    Content="Анализ и Выполнить"
                    Padding="10,5"
                    Click="AnalyzeButton_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SourceTextBox"
                     Margin="10"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="14"/>

            <TextBox x:Name="ResultTextBox"
                     Grid.Column="1"
                     Margin="10"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="14"/>
        </Grid>
    </Grid>
</Window>
