<Window x:Class="Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Лексический анализатор" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Name="InputTextBox" 
         TextWrapping="Wrap" 
         VerticalScrollBarVisibility="Auto"
         Margin="10" 
         Foreground="Gray"
         Text="Введите текст для анализа..."
         GotFocus="InputTextBox_GotFocus"
         LostFocus="InputTextBox_LostFocus"/>
        <Button Grid.Row="0" Margin="10,0,10,10" 
                VerticalAlignment="Bottom" 
                Content="Анализировать" 
                Click="AnalyzeButton_Click"/>

        <DataGrid Grid.Row="1" Margin="10"
                  AutoGenerateColumns="True"
                  ItemsSource="{Binding Lexemes}"
                  HeadersVisibility="Column"/>
    </Grid>
</Window>